<Application x:Class="AnimalFarmPic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AnimalFarmPic"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="logo" >
            <Grid Height="60" Background="PaleVioletRed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="Tierliste" Grid.Column="0" FontFamily="Comic" Foreground="White" FontSize="30" />
                <Label Content="Forscher GmbH" Grid.Column="1" FontFamily="Comic"  Foreground="White" FontSize="30"/>
            </Grid>
        </ControlTemplate>
    </Application.Resources>
</Application>
